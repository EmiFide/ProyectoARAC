@model AdoptameLiberia.Models.Inventario.ItemInventarioCreateEdit
@{
    ViewBag.Title = "Registrar artículo";
}

<h2>Registrar artículo</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(m => m.Nombre, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Descripcion, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(m => m.Descripcion, 3, 40, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Descripcion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Categoria, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.TextBoxFor(m => m.Categoria, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Categoria, "", new { @class = "text-danger" })
            </div>

            @Html.LabelFor(m => m.UnidadMedida, "Unidad de medida", new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.TextBoxFor(m => m.UnidadMedida, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.UnidadMedida, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.StockActual, "Stock inicial", new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.TextBoxFor(m => m.StockActual, new { @class = "form-control", type = "number", min = "0" })
                @Html.ValidationMessageFor(m => m.StockActual, "", new { @class = "text-danger" })
            </div>

            @Html.LabelFor(m => m.StockMinimo, "Stock mínimo", new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.TextBoxFor(m => m.StockMinimo, new { @class = "form-control", type = "number", min = "0" })
                @Html.ValidationMessageFor(m => m.StockMinimo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.FechaCaducidad, "Fecha de caducidad (si aplica)", new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.TextBoxFor(m => m.FechaCaducidad, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                @Html.ValidationMessageFor(m => m.FechaCaducidad, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-6 text-muted" style="padding-top:7px;">
                Para medicamentos o alimentos con vencimiento.
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary">Guardar</button>
                @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
