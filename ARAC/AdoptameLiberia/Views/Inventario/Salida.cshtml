@model AdoptameLiberia.Models.Inventario.MovimientoSalida
@{
    ViewBag.Title = "Registrar salida";
}

<h2>Registrar salida</h2>

<div class="alert alert-info">
    Art√≠culo: <strong>@Model.NombreItem</strong>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.IdItemInventario)
    @Html.HiddenFor(m => m.NombreItem)

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(m => m.Cantidad, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.TextBoxFor(m => m.Cantidad, new { @class = "form-control", type = "number", min = "1" })
                @Html.ValidationMessageFor(m => m.Cantidad, "", new { @class = "text-danger" })
            </div>

            @Html.LabelFor(m => m.Destinatario, "Destinatario / uso", new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.TextBoxFor(m => m.Destinatario, new { @class = "form-control", placeholder = "Ej: Veterinaria, Refugio, Limpieza..." })
                @Html.ValidationMessageFor(m => m.Destinatario, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Motivo, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Motivo, new { @class = "form-control", placeholder = "Opcional (ej: uso veterinario)" })
                @Html.ValidationMessageFor(m => m.Motivo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-warning">Guardar salida</button>
                @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
