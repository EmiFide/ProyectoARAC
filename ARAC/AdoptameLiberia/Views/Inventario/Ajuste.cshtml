@model AdoptameLiberia.Models.Inventario.AjusteInventario
@{
    ViewBag.Title = "Ajuste de inventario";
}

<h2>Ajuste de inventario</h2>

<div class="alert alert-info">
    Artículo: <strong>@Model.NombreItem</strong> &nbsp; | &nbsp; Stock actual: <strong>@Model.StockActual</strong>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.IdItemInventario)
    @Html.HiddenFor(m => m.NombreItem)
    @Html.HiddenFor(m => m.StockActual)

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(m => m.NuevoStock, "Nuevo stock", new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.TextBoxFor(m => m.NuevoStock, new { @class = "form-control", type = "number", min = "0" })
                @Html.ValidationMessageFor(m => m.NuevoStock, "", new { @class = "text-danger" })
            </div>

            @Html.LabelFor(m => m.Motivo, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.TextBoxFor(m => m.Motivo, new { @class = "form-control", placeholder = "Ej: Diferencia física / conteo" })
                @Html.ValidationMessageFor(m => m.Motivo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-info">Aplicar ajuste</button>
                @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
