@model List<AdoptameLiberia.Models.TiposAnimales.TipoAnimal>

<h2>Tipos de Animales</h2>

<p>@Html.ActionLink("Nuevo", "Create")</p>

<table border="1">
    <tr>
        <th>Nombre</th>
        <th>Descripción</th>
        <th>Estado</th>
        <th>Acciones</th>
    </tr>

    @foreach (AdoptameLiberia.Models.TiposAnimales.TipoAnimal item in Model)
    {
        <tr>
            <td>@item.Nombre_Tipo_Animal</td>
            <td>@item.Descripcion</td>
            <td>@(item.Estado ? "Activo" : "Inactivo")</td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.ID_TipoAnimal }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.ID_TipoAnimal })
            </td>
        </tr>
    }
</table>
