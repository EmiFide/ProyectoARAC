@model AdoptameLiberia.Models.RoleCreateEditVM
@{
    ViewBag.Title = "Crear rol";
}

<h2>Crear rol</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.Partial("_RoleForm", Model)

    <button type="submit" class="btn btn-success">Guardar</button>
    @Html.ActionLink("Volver", "Index", "Roles", null, new { @class = "btn btn-secondary" })
}

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        // Si se marca escritura, marca lectura autom√°ticamente (UX)
        $(document).on('change', '.perm-write', function () {
            var row = $(this).closest('tr');
            if ($(this).is(':checked')) {
                row.find('.perm-read').prop('checked', true);
            }
        });
    </script>
}
