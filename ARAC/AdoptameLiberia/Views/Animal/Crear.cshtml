@model AdoptameLiberia.Models.Mascotas.AnimalModel

@{
    ViewBag.Title = "Registrar Mascota";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">

    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">

            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Registrar Nueva Mascota</h4>
                </div>

                <div class="card-body">

                    @using (Html.BeginForm())
                    {
                        <div class="row mb-3">
                            <div class="col-md-6">
                                @Html.LabelFor(m => m.Nombre_Animal, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.Nombre_Animal,
                                    new { @class = "form-control", placeholder = "Nombre de la mascota", required = "required" })
                            </div>

                            <div class="col-md-3">
                                @Html.LabelFor(m => m.Edad, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.Edad,
                                    new { @class = "form-control", type = "number", min = "0" })
                            </div>

                            <div class="col-md-3">
                                @Html.LabelFor(m => m.Sexo, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.Sexo,
                                    new { @class = "form-control", placeholder = "M / H" })
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                @Html.Label("ID Tipo Animal", new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.ID_TipoAnimal,
                                    new { @class = "form-control", placeholder = "Ej: 1" })
                            </div>

                            <div class="col-md-6">
                                @Html.Label("ID Raza", new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.ID_Raza,
                                    new { @class = "form-control", placeholder = "Ej: 3" })
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                @Html.LabelFor(m => m.Tamano, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.Tamano,
                                    new { @class = "form-control", placeholder = "Pequeño / Mediano / Grande" })
                            </div>

                            <div class="col-md-6">
                                @Html.LabelFor(m => m.Peso, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.Peso,
                                    new { @class = "form-control", type = "number", step = "0.01" })
                            </div>
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Descripcion, new { @class = "form-label" })
                            @Html.TextAreaFor(m => m.Descripcion,
                                new { @class = "form-control", rows = "4", placeholder = "Describe a la mascota..." })
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="@Url.Action("Catalogo", "Animal")" class="btn btn-outline-secondary">
                                ← Volver
                            </a>

                            <button type="submit" class="btn btn-success px-4">
                                Guardar
                            </button>
                        </div>
                    }

                </div>
            </div>

        </div>
    </div>
</div>
