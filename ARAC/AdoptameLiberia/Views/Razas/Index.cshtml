@model IEnumerable<AdoptameLiberia.Models.Raza>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("Index", "Razas", FormMethod.Get))
{
    <div class="form-group">
        <label>Filtrar por tipo de animal</label>
        @Html.DropDownList(
            "tipoAnimalId",
            (SelectList)ViewBag.TiposAnimal,
            "Todos",
            new { @class = "form-control", onchange = "this.form.submit();" }
        )
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TipoAnimal.Nombre_Tipo_Animal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NombreRaza)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TipoAnimal.Nombre_Tipo_Animal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreRaza)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID_Raza }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID_Raza }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID_Raza })
            </td>
        </tr>
    }

</table>
