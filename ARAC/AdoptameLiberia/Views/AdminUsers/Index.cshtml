@model IEnumerable<AdoptameLiberia.Models.UserListItemVM>
@{
    ViewBag.Title = "Usuarios";
}

<h2>Usuarios</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Correo</th>
            <th>Roles</th>
            <th style="width:180px;"></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var u in Model)
    {
        <tr>
            <td>@u.Email</td>
            <td>
                @if (u.Roles != null && u.Roles.Any())
                {
                    @string.Join(", ", u.Roles)
                }
                else
                {
                    <span class="text-muted">Sin roles</span>
                }
            </td>
            <td>
                @Html.ActionLink("Asignar roles", "AssignRoles", "AdminUsers", new { id = u.UserId }, new { @class = "btn btn-sm btn-primary" })
            </td>
        </tr>
    }
    </tbody>
</table>
