@model AdoptameLiberia.Models.Donaciones.Donacion
@{
    Layout = null; // imprimible
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Comprobante Donación</title>
</head>
<body>
    <h2>Comprobante de Donación</h2>
    <p><b>ID:</b> @Model.IdDonacion</p>
    <p><b>Fecha:</b> @Model.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</p>
    <p><b>Tipo:</b> @(Model.TipoDonacion != null ? Model.TipoDonacion.Nombre : "")</p>
    <p><b>Monto:</b> @Model.Monto</p>
    <p><b>Método:</b> @Model.Metodo</p>
    <p><b>Descripción:</b> @Model.Descripcion</p>

    @if (Model.Detalles != null && Model.Detalles.Any())
    {
        <h3>Detalle de Insumos</h3>
        <ul>
            @foreach (var det in Model.Detalles)
            {
                <li>@det.Descripcion</li>
            }
        </ul>
    }

    <hr />
    <p>Firma: ____________________________</p>

    <button onclick="window.print()">Imprimir</button>
</body>
</html>